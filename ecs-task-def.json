{
  "family": "octopus-deploy",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "1024",
  "memory": "2048",       
  "executionRoleArn": "arn:aws:iam::665040277244:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "octopus-deploy",
      "image": "665040277244.dkr.ecr.us-east-1.amazonaws.com/octopus-deploy:latest",
      "essential": true,
      "environment": [
        {
          "name": "ACCEPT_EULA",
          "value": "Y"
        },
        {
          "name": "DB_CONNECTION_STRING",
          "value": "Server=db,1433;Initial Catalog=OctopusDeploy;Persist Security Info=False;User ID=sa;Password=P@ssw0rd123!;MultipleActiveResultSets=False;Connection Timeout=30;"
        },
        {
          "name": "ADMIN_USERNAME",
          "value": "admin"
        },
        {
          "name": "ADMIN_PASSWORD",
          "value": "Password123!"
        },
        {
          "name": "ADMIN_EMAIL",
          "value": "admin@example.com"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 10943,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/octopus-deploy",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "octopus-deploy"
        }
      }
    }
  ]
}
