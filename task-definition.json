{
  "family": "octopus-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "octopus-container",
      "image": "REPLACE_ME", 
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "OCTOPUS_SQL_CONNECTION_STRING",
          "value": "Server=octopus-db.crufshaeq0ox.us-east-1.rds.amazonaws.com;Database=OctopusDeploy;User Id=octopusadmin;Password=SecureDBPass123!;"
        },
        {
          "name": "OCTOPUS_ADMIN_USERNAME",
          "value": "admin"
        },
        {
          "name": "OCTOPUS_ADMIN_PASSWORD",
          "value": "SecurePassword123!"
        },
        {
          "name": "OCTOPUS_PORT",
          "value": "8080"
        }
      ]
    }
  ]
}
